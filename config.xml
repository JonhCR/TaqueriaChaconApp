<?xml version='1.0' encoding='utf-8'?>
<widget id="com.solutionscrc.taqueriachaconapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Taquería Chacón</name>
    <description>
        Aplicación para efectuar pedidos y canjear premios de Taquería Chacón, Pavas Costa Rica
    </description>
    <author email="jhon.moreira@solutionscrc.com" href="http://solutionscrc.com">
        SolutionsCR
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/drawable-xxhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/drawable-xxxhdpi/ic_launcher.png" density="xhdpi" />
        <access origin="http://www.taqueriachaconpavas.com/" />
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
